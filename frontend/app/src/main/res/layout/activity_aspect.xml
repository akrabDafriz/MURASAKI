    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aspect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".AspectActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="16dp">
        <ImageView
            android:id="@+id/avatar_knight"
            android:layout_width="260dp"
            android:layout_height="381dp"
            android:src="@drawable/idle_knight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.432" />

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
            app:layout_constraintBottom_toTopOf="@+id/line_chest_strength"
            app:layout_constraintEnd_toEndOf="@+id/line_chest_strength">

            <TextView
                android:id="@+id/tv_chest_strength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jaroregularvariablefontopsz"
                android:text="Chest Strength: "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="336dp" />

            <TextView
                android:id="@+id/chest_strength_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/jaroregularvariablefontopsz"
                android:text="50"
                android:textColor="#F05356"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_chest_strength"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginEnd="136dp"
            android:background="#F05356"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_knight"

            app:layout_constraintEnd_toEndOf="@+id/avatar_knight"
            app:layout_constraintTop_toTopOf="@+id/avatar_knight"
            app:layout_constraintVertical_bias="0.295" />

        <RelativeLayout
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/line_arm_strength"
            app:layout_constraintEnd_toEndOf="@+id/line_arm_strength">

            <TextView
                android:id="@+id/tv_arm_strength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jaroregularvariablefontopsz"
