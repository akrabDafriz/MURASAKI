                android:fontFamily="@font/jaroregularvariablefontopsz"
                android:text="50"
                android:textColor="#53F0D1"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_leg_speed"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginStart="84dp"
            android:background="#53F0D1"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_knight"
            app:layout_constraintEnd_toEndOf="@+id/avatar_knight"
            app:layout_constraintHorizontal_bias="0.012"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/avatar_knight"
            app:layout_constraintVertical_bias="0.797" />

        <RelativeLayout
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="340dp"
            app:layout_constraintBottom_toTopOf="@+id/line_heart_vitality"
            app:layout_constraintStart_toStartOf="@+id/line_heart_vitality">

            <TextView
                android:id="@+id/tv_heart_vitality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jaroregularvariablefontopsz"
                android:text="Heart Vitality: "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="336dp" />

            <TextView
                android:id="@+id/heart_vitality_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/jaroregularvariablefontopsz"
                android:text="50"
                android:textColor="#53F058"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_heart_vitality"
            android:layout_width="100dp"
            android:layout_height="5dp"
