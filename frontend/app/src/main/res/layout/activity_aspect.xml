            <TextView
                android:id="@+id/core_stability_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/jaroregularvariablefontopsz"
                android:text="50"
                android:textColor="#F053EE"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_core_stability"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_marginStart="132dp"
            android:background="#F053EE"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_knight"
            app:layout_constraintStart_toStartOf="@+id/avatar_knight"
            app:layout_constraintTop_toTopOf="@+id/avatar_knight"
            app:layout_constraintVertical_bias="0.473" />

                <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/navbar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/navbar_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageButton
                    android:id="@+id/btn_input_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/navbar_input_btn"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/btn_exercise_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/navbar_list_btn"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/btn_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/navbar_home_btn"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/btn_stat_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/navbar_detail_btn"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/navbar_settings_btn"
                    android:scaleType="centerInside" />
            </LinearLayout>
