            android:background="#F05356"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_knight"
            app:layout_constraintEnd_toEndOf="@+id/avatar_knight"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/avatar_knight"
            app:layout_constraintVertical_bias="0.362" />

        <RelativeLayout
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/line_back_strength"
            app:layout_constraintStart_toStartOf="@+id/line_back_strength">

            <TextView
                android:id="@+id/tv_back_strength"
