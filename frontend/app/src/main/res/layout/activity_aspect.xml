                android:textColor="#F0F053"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_body_flexibility"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginEnd="164dp"
            android:layout_marginBottom="208dp"
            android:background="#F0F053"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_knight"
            app:layout_constraintEnd_toEndOf="@+id/avatar_knight" />

