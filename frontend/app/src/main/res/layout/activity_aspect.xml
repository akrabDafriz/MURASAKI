            app:layout_constraintVertical_bias="0.962" />

        <RelativeLayout
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/line_leg_speed"
            app:layout_constraintEnd_toEndOf="@+id/line_leg_speed">

            <TextView
                android:id="@+id/tv_leg_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jaroregularvariablefontopsz"
                android:text="Leg Speed: "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="336dp" />

            <TextView
