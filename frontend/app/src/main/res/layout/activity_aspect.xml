            android:layout_height="wrap_content"
            android:layout_marginTop="584dp"
            app:layout_constraintBottom_toTopOf="@+id/line_foot_agility"
            app:layout_constraintStart_toStartOf="@+id/line_foot_agility"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_foot_agility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jaroregularvariablefontopsz"
                android:text="Foot Agility: "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="336dp" />

            <TextView
                android:id="@+id/foot_agility_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/jaroregularvariablefontopsz"
                android:text="50"
                android:textColor="#53F0D1"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_foot_agility"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginStart="176dp"
