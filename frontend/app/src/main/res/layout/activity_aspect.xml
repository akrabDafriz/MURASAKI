            android:layout_marginStart="88dp"
            android:layout_marginTop="408dp"
            app:layout_constraintBottom_toTopOf="@+id/line_core_stability"
            app:layout_constraintStart_toStartOf="@+id/line_core_stability"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tv_core_stability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jaroregularvariablefontopsz"
                android:text="Core Stability: "
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
