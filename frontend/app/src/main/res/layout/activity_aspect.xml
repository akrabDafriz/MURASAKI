                android:fontFamily="@font/jaroregularvariablefontopsz"
                android:text="50"
                android:textColor="#F05356"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_back_strength"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginStart="220dp"
            android:background="#F05356"
            android:rotation="-45"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_knight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/avatar_knight"
            app:layout_constraintVertical_bias="0.127" />

        <RelativeLayout
